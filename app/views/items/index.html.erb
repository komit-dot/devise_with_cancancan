<h1 style="color: green;">List of All Items</h1>
<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Show this item", item %>
      <% if can? :update, item %>
        <%= link_to 'Edit This Item', edit_item_path(item) %>
      <% end %>
      <% if can? :destroy, item %>
        <%= link_to 'Destroy This Item', item, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <br></br>
    </p>
  <% end %>
</div>
<%= link_to "New item", new_item_path %>
